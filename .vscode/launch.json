
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cmake Editor",
            "request": "launch",
            "type": "cppvsdbg",
            "console": "internalConsole",
            "program": "${workspaceFolder}/bin/editor.exe",
            "args": [""],
            "preLaunchTask": "CMake: build Editor",
            "cwd": "${workspaceFolder}/bin",
            "osx": {"type": "cppdbg", "MIMode": "lldb", "program": "${workspaceFolder}/bin/editor"},
        },
        {
            "name": "ECS tests",
            "request": "launch",
            "type": "cppvsdbg",
            "console": "internalConsole",
            "program": "${workspaceFolder}/bin/ecs_tests.exe",
            "args": [""],
            "preLaunchTask": "CMake: build ECS tests",
            "cwd": "${workspaceFolder}/bin",
            "visualizerFile": "${command:cmake.buildDirectory}/vcpkg_installed/x64-win-llvm/doc/EASTL.natvis",
            "osx": {"type": "cppdbg", "MIMode": "lldb", "program": "${workspaceFolder}/bin/ecs_tests"},
        },
        {
            "name": "ECS benchmark",
            "request": "launch",
            "type": "cppvsdbg",
            "console": "internalConsole",
            "program": "${workspaceFolder}/bin/ecs_benchmark.exe",
            "args": [""],
            "preLaunchTask": "CMake: build ECS benchmark",
            "cwd": "${workspaceFolder}/bin",
            "visualizerFile": "${command:cmake.buildDirectory}/vcpkg_installed/x64-win-llvm/doc/EASTL.natvis",
            "osx": {"type": "cppdbg", "MIMode": "lldb","program": "${workspaceFolder}/bin/ecs_benchmark"},
        },
        {
            "name": "Editor",
            "request": "launch",
            "type": "cppvsdbg",
            "console": "internalConsole",
            "program": "${workspaceFolder}/bin/editor.exe",
            "args": [""],
            "cwd": "${workspaceFolder}/bin/",
            "preLaunchTask": "CMake: build Editor",
        },
        {
            "name": "ecs_codegen",
            "request": "launch",
            "type": "cppvsdbg",
            "console": "internalConsole",
            "program": "${workspaceFolder}/bin/ecs_codegen.exe",
            "args": [""],
            "cwd": "${workspaceFolder}/bin/",
            "preLaunchTask": "CMake: build ecs_codegen",
        },
        {
            "name": "demo3",
            "request": "launch",
            "type": "cppvsdbg",
            "console": "internalConsole",
            "program": "${workspaceFolder}/bin/demo3.exe",
            "args": [""],
            "cwd": "${workspaceFolder}/bin/",
            "preLaunchTask": "CMake: build demo3",
            "visualizerFile": "${command:cmake.buildDirectory}/vcpkg_installed/x64-win-llvm/doc/EASTL.natvis",
        },
        {
            "name": "Shader compiler",
            "request": "launch",
            "type": "cppvsdbg",
            "console": "internalConsole",
            "program": "${workspaceFolder}/bin/shader_compiler.exe",
            "args": ["build", "${command:cmake.buildDirectory}/src/demo3/shaders.jsonnet", "--output", "${workspaceFolder}/bin/CompiledShaders.rfxlib", "--include", "${workspaceFolder}/src/shaders"],
            "cwd": "${workspaceFolder}/bin/",
            "preLaunchTask": "CMake: build shader_compiler",
            "visualizerFile": "${command:cmake.buildDirectory}/vcpkg_installed/x64-win-llvm/doc/EASTL.natvis",
            "osx": {
                "type": "cppdbg",
                "MIMode": "lldb",
                "program": "${workspaceFolder}/bin/shader_compiler"
            },
        }
    ]
}